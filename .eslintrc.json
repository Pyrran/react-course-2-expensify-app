{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest/globals": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "airbnb"
    ],
    "plugins": [
        "babel",
        "jest"
    ],
    "rules": {
        "linebreak-style": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/prop-types": [
            "skipUndeclared"
        ],
        "react/react-in-jsx-scope": [
            "disabled"
        ],
        "implicit-arrow-linebreak":"off",
        "import/extensions": [
            "error",
            {
                "js": "ignorePackages"
            }
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true,
                "optionalDependencies": false,
                "peerDependencies": false
            }
        ],
        "import/no-named-as-default": "off",
        "import/prefer-default-export":"off",
        "react/button-has-type": "off",
        "react/no-multi-comp": "disabled",
        "react/destructuring-assignment": "disabled",
        "react/jsx-indent": [2,2],
        "react/jsx-one-expression-per-line": "disabled",
        "no-console": "off",
        "no-alert": "off",
        "one-var": "off",
        "one-var-declaration-per-line": "off",
        "no-restricted-globals": "off",
        "arrow-parens": [
            "warn",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-underscore-dangle": "off",
        "no-case-declarations": "off",
        "jsx-a11y/anchor-is-valid": [
            "error",
            {
                "components": [
                    "Link"
                ],
                "specialLink": [
                    "to",
                    "hrefLeft",
                    "hrefRight"
                ],
                "aspects": [
                    "noHref",
                    "invalidHref",
                    "preferButton"
                ]
            }
        ],
        "jsx-a11y/no-autofocus": "off"
    }
}